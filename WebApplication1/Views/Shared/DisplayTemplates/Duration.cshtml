@model int
@{
    var hours = Model / 60;
    var minutes = Model % 60;

    if (hours > 1)
    {
        @:@hours timer
    }
    else if (hours == 1)
    {
        @:1 time
    }

    if(hours > 0 && minutes > 0)
    {
        <text>og</text>
    }

    if (minutes > 1)
    {
        @:@minutes minutter
    }
    else if (minutes == 1)
    {
        @:1 minutt
    }

}
